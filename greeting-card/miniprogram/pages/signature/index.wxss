page {
  height: 100%;
  width: 100%;
  background-color: #f6f0e7;
}

.mask {
  background-color: rgba(0, 0, 0, 0.5);
}

.container {
  width: 100%;
  height: 100%;
}

.image-container {
  position: relative;
  padding-top: 25%;
  height: 55%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-image {
  height: 100%;
}

.text-container {
  height: 30%;
  width: 70%;
  position: absolute;
  top: 88%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.name {
  color: #ffffff;
  font-family: PingFangSC, sans-serif;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  height: 30%;
}

.input-container {
  height: 70%;
  color: #ffffff;
  font-family: PingFangSC, sans-serif;
  font-size: 30rpx;
  font-weight: normal;
  position: relative;
}

.textarea {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
}

.underline {
  position: absolute;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.5);
}

.underline:nth-child(1) {
  top: 45rpx;
}

.underline:nth-child(2) {
  top: 85rpx;
}

.underline:nth-child(3) {
  top: 125rpx;
}

.tips {
  font-family: PingFangSC, sans-serif;
  font-size: 45rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.recording-container {
  margin-top: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn {
  font-family: PingFangSC, sans-serif;
  font-size: 35rpx;
  font-weight: bold;
  border: 2px solid #000000;
  height: 80rpx;
  margin: 0 50rpx 50rpx 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-smail {
  font-family: PingFangSC, sans-serif;
  font-size: 22rpx;
  font-weight: normal;
  border: 1px solid #000000;
  border-radius: 80rpx;
  height: 100rpx;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.blank {
  width: 100rpx;
}

.mic-img {
  height: 65rpx;
}

.voice-circle {
  background-color: #f6f0e7;
  position: absolute;
  top: 55%;
  bottom: 0;
  width: 100%;
  height: 100%;
  transform: rotate(90deg);
  border-radius: 70%;
  display: flex;
  align-items: center;
}

.voice-circle-mic {
  margin-left: 20px;
  transform: rotate(-90deg);
  height: 100rpx;
  width: 100rpx;
}

.name-container {
  padding: 15rpx;
  height: 100rpx;
  margin: 80rpx 50rpx 30rpx 50rpx;
  border: 1px solid #000000;
  display: flex;
  justify-content: start;
  align-items: center;
}
