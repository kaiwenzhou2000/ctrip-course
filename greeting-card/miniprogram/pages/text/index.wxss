page {
  height: 100%;
  width: 100%;
  background-color: #f6f0e7;
}

.container {
  width: 100%;
  height: 100%;
}

.image-container {
  position: relative;
  margin-top: 25%;
  height: 55%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-image {
  height: 100%;
}

.text-container {
  height: 30%;
  width: 70%;
  position: absolute;
  top: 88%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.name {
  color: #ffffff;
  font-family: PingFangSC, sans-serif;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  height: 30%;
}

.input-container {
  height: 70%;
  color: #ffffff;
  font-family: PingFangSC, sans-serif;
  font-size: 30rpx;
  font-weight: normal;
  position: relative;
}

.textarea {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
}

.underline {
  position: absolute;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: rgba(255, 255, 255, 0.5);
}

.underline:nth-child(1) {
  top: 45rpx;
}

.underline:nth-child(2) {
  top: 85rpx;
}

.underline:nth-child(3) {
  top: 125rpx;
}

.tips {
  font-family: PingFangSC, sans-serif;
  font-size: 45rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.btn {
  font-family: PingFangSC, sans-serif;
  font-size: 35rpx;
  font-weight: bold;
  border: 2px solid #000000;
  height: 80rpx;
  margin: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
